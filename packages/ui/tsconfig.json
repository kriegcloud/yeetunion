{
  "extends": ["@dank/tsconfig/react.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", ".storybook/**/*", "**/*.d.ts"],
  "exclude": ["node_modules", "dist", "storybook-static"]
}
