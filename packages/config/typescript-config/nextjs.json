{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "A Next.js App",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "rootDir": "${configDir}",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "${configDir}",
    "${configDir}/**/*.json",
    "${configDir}/next-env.d.ts",
    "${configDir}/.next/types/**/*.ts"
  ],
  "exclude": ["${configDir}/node_modules"]
}